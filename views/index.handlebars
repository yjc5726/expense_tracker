<a href="./records/new">Create</a>
<form action="/search">
  <label for="category">Choose category:</label>
  <select name="category">
    <option value="none" selected disabled hidden>
      Select an Option
    </option>
    <option value="home">home</option>
    <option value="transportation">transportation</option>
    <option value="entertainment">entertainment</option>
    <option value="food">food</option>
    <option value="other">other</option>
  </select>
  <input type="submit" value="Submit" style="display: inline;">
</form>
{{#if keyword}}<div>搜尋類別:{{keyword}}</div>{{/if}}
<table>
  <tr>
    <td>類別</td>
    <td>日期</td>
    <td>名稱</td>
    <td>金額</td>
  </tr>
  {{#each records}}
  <tr>
    <td>{{this.category}}</td>
    <td>{{this.date}}</td>
    <td>{{this.name}}</td>
    <td class="amount">{{this.amount}}</td>
    <td><a href="./records/{{ this._id }}/edit">edit</a></td>
    <td>
      <form action="./records/{{ this._id }}/delete" method="POST" style="display: inline;">
        <button type="submit">delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
</table>
<div>
  <span>支出總金額</span>
  <span id='total-amount'></span>
</div>
